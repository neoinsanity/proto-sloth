<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <!--
    This world factory is just to create the world instance for testing
    -->
    <bean id="simpleWorldFactory" class="proto.sloth.core.world.imp.SimpleCharWorldFactoryImp"/>

    <!--
    This is the path for the test archive files.
    -->
    <bean id="baseArchivePath" class="java.lang.String">
        <constructor-arg value="target/test-classes/proto/sloth/core/world/imp/"/>
    </bean>

</beans>
